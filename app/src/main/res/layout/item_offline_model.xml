<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardModel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Status Icon -->
        <ImageView
            android:id="@+id/statusIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_cloud_download"
            android:tint="#666666" />

        <!-- Model Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/statusIcon"
            android:layout_marginEnd="12dp"
            android:orientation="vertical">

            <!-- Model Name -->
            <TextView
                android:id="@+id/modelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Model Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginBottom="4dp" />

            <!-- Model Description -->
            <TextView
                android:id="@+id/modelDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginBottom="8dp" />

            <!-- Model Size -->
            <TextView
                android:id="@+id/modelSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حجم: 0 GB"
                android:textSize="13sp"
                android:textColor="#999"
                android:layout_marginBottom="8dp" />

            <!-- Features -->
            <TextView
                android:id="@+id/modelFeatures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• ویژگی 1\n• ویژگی 2"
                android:textSize="12sp"
                android:textColor="#666"
                android:lineSpacing="4dp"
                android:layout_marginBottom="12dp" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <Button
                    android:id="@+id/downloadButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="دانلود"
                    android:textSize="14sp"
                    android:backgroundTint="#4CAF50"
                    style="@style/Widget.Material3.Button"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/deleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="حذف"
                    android:textSize="14sp"
                    android:backgroundTint="#F44336"
                    style="@style/Widget.Material3.Button"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
