<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primaryColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/searchCityEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="جستجوی شهر..."
            android:inputType="text"
            android:imeOptions="actionSearch" />

        <Button
            android:id="@+id/searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="جستجو" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Current Weather Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/cityNameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="تهران"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/currentTempText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="25°C"
                        android:textSize="48sp"
                        android:gravity="center"
                        android:padding="16dp" />

                    <TextView
                        android:id="@+id/weatherDescText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="آفتابی"
                        android:textSize="18sp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:id="@+id/minTempText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="حداقل: 18°"
                            android:layout_marginEnd="24dp" />

                        <TextView
                            android:id="@+id/maxTempText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="حداکثر: 28°" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Hourly Forecast -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="پیش‌بینی ساعتی"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/hourlyForecastContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

            </HorizontalScrollView>

            <!-- Daily Forecast -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="پیش‌بینی 7 روزه"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/dailyForecastContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
