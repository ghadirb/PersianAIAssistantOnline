<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primaryColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#E8F5E9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <Button
                android:id="@+id/prevMonthBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="❮"
                android:textSize="28sp"
                android:textColor="@color/primaryColor"
                style="?android:attr/buttonBarButtonStyle" />

            <TextView
                android:id="@+id/currentMonthText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="آذر ۱۴۰۳"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />

            <Button
                android:id="@+id/nextMonthBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="❯"
                android:textSize="28sp"
                android:textColor="@color/primaryColor"
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>

        <!-- سطر ایام هفته -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="7"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="ش"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#666666" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="ی"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#666666" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="د"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#666666" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="س"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#666666" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="چ"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#666666" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="پ"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#666666" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="ج"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#FF0000" />

        </GridLayout>

        <GridView
            android:id="@+id/calendarGrid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:numColumns="7"
            android:horizontalSpacing="2dp"
            android:verticalSpacing="2dp" />

        <TextView
            android:id="@+id/selectedDayEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="مناسبت‌های امروز:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eventsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- اوقات شرعی و تاریخ میلادی/قمری -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="12dp">

            <!-- تاریخ میلادی و قمری -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                
                <TextView
                    android:id="@+id/gregorianDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6 اکتبر 2025"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp" />
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textColor="#999999"
                    android:layout_marginEnd="16dp" />
                    
                <TextView
                    android:id="@+id/hijriDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13 ربیع الاول 1447"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- اوقات شرعی -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="اذان صبح: 4:06"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:padding="4dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="طلوع: 5:26"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:padding="4dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="اذان ظهر: 11:19"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:padding="4dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="غروب: 17:13"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:padding="4dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="اذان مغرب: 17:31"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:padding="4dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="نیمه‌شب: 22:37"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:padding="4dp" />
            </GridLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
