<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primaryColor"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Main Weather Card - یکسان با داشبورد -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="#FF6B6B">

                    <!-- آیکون آب و هوا - مثل داشبورد -->
                    <TextView
                        android:id="@+id/weatherIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="☀️"
                        android:textSize="48sp"
                        android:layout_marginBottom="8dp" />

                    <!-- نام شهر با دکمه جستجو -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/cityNameText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="تهران"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- دکمه جستجوی واضح‌تر -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/searchCityButton"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="🔍 جستجو"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:layout_marginStart="8dp"
                            app:cornerRadius="18dp"
                            app:icon="@drawable/ic_search"
                            app:iconTint="@android:color/white"
                            app:iconSize="18dp"
                            app:iconGravity="start"
                            android:backgroundTint="#80FFFFFF"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            style="@style/Widget.Material3.Button.TonalButton" />
                    </LinearLayout>

                    <!-- دما - مثل داشبورد -->
                    <TextView
                        android:id="@+id/tempText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25°"
                        android:textColor="@android:color/white"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <!-- توضیحات آب و هوا -->
                    <TextView
                        android:id="@+id/weatherDescText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="آفتابی"
                        android:textColor="#FFE0E0"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp" />

                    <!-- جزئیات (رطوبت، باد، احساسی) - سایز کوچکتر مثل داشبورد -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="💧 رطوبت"
                                android:textColor="#FFE0E0"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/humidityText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45%"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="💨 باد"
                                android:textColor="#FFE0E0"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/windSpeedText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12 km/h"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="🌡️ احساسی"
                                android:textColor="#FFE0E0"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/feelsLikeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="27°"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- دکمه‌های دسترسی سریع -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/hourlyButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="⏰ ساعتی"
                            android:textSize="13sp"
                            app:cornerRadius="8dp"
                            app:backgroundTint="@android:color/white"
                            android:textColor="#FF6B6B" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/forecastButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="📅 7 روزه"
                            android:textSize="13sp"
                            app:cornerRadius="8dp"
                            app:backgroundTint="@android:color/white"
                            android:textColor="#FF6B6B" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- AQI Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/aqiCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🌫️ کیفیت هوا"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/aqiValueText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AQI: 45"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/aqiStatusText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="خوب"
                                android:textSize="14sp"
                                android:textColor="#4CAF50" />
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/aqiProgressBar"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="120dp"
                            android:layout_height="12dp"
                            android:max="200"
                            android:progress="45" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Cities -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🏙️ شهرهای پرطرفدار"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/quickCitiesLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Hourly Forecast Card (قابل مخفی شدن) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/hourlyCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⏰ پیش‌بینی ساعتی"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/hourlyRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
