<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/installmentStatusIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_active"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/installmentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="عنوان قسط"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/installmentLender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="طلبکار: نام شخص/شرکت"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/installmentNextPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="پرداخت بعدی: ۱۴۰۲/۰۲/۰۱"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

            <!-- پیشرفت پرداخت -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ProgressBar
                    android:id="@+id/installmentProgress"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressTint="#4CAF50" />

                <TextView
                    android:id="@+id/installmentProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="۰% (۰/۱۲)"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/installmentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="فعال"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#2196F3"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/installmentTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="کل: ۲۰M"
                android:textSize="10sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/installmentPaidAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="پرداخت: ۵M"
                android:textSize="10sp"
                android:textColor="#4CAF50" />

            <TextView
                android:id="@+id/installmentRemainingAmount"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="مانده: ۱۵M"
                android:textSize="10sp"
                android:textColor="#F44336" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
