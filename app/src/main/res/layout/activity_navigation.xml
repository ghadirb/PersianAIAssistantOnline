<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NavigationActivity">

    <!-- Map Container -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/mapWebView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Selected Location Marker -->
        <ImageView
            android:id="@+id/selectedMarker"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_mylocation"
            android:visibility="gone"
            android:tint="#F44336" />
    </FrameLayout>

    <!-- Top Search Bar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_search"
                android:layout_marginStart="8dp"
                android:tint="#666666" />

            <EditText
                android:id="@+id/searchInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="جستجو با هوش مصنوعی..."
                android:background="@null"
                android:padding="12dp"
                android:textSize="16sp"
                android:imeOptions="actionSearch"
                android:inputType="text" />

            <ImageView
                android:id="@+id/voiceSearchBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_btn_speak_now"
                android:layout_marginEnd="8dp"
                android:tint="#1976D2" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Speed Card (Bottom Right - فقط در حین مسیریابی) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/speedCard"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="180dp"
        android:visibility="gone"
        app:cardCornerRadius="60dp"
        app:cardElevation="8dp"
        android:backgroundTint="#E01976D2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp">

            <TextView
                android:id="@+id/currentSpeedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="km/h"
                android:textColor="#FFE0E0"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/speedLimitText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مجاز: --"
                android:textColor="#FFE0E0"
                android:textSize="10sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Route Info Card (Top Right) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/routeInfoCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="140dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:backgroundTint="#D0FF6B6B">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/routeDistanceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مسافت: --"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/routeDurationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="زمان: --"
                android:textColor="#FFE0E0"
                android:textSize="11sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom Control Panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="16dp"
        android:padding="16dp">

        <!-- Search & Location Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/searchDestinationButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="🔍 جستجوی مقصد"
                android:textSize="14sp"
                app:cornerRadius="12dp"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/myLocationButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="📍"
                android:textSize="20sp"
                app:cornerRadius="12dp"
                style="@style/Widget.Material3.Button.Icon" />
        </LinearLayout>

        <!-- Saved Locations & POI Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/savedLocationsButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="💾 ذخیره‌ها"
                android:textSize="12sp"
                app:cornerRadius="10dp"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_marginEnd="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/poiButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="📏 نزدیک"
                android:textSize="12sp"
                app:cornerRadius="10dp"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveCurrentLocationButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="⭐ ذخیره"
                android:textSize="12sp"
                app:cornerRadius="10dp"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Navigation Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/startNavigationButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="▶️ شروع مسیریابی"
                android:textSize="14sp"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/primaryColor"
                style="@style/Widget.Material3.Button"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/stopNavigationButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="⏹️ توقف"
                android:textSize="14sp"
                android:visibility="gone"
                app:cornerRadius="12dp"
                android:backgroundTint="#F44336"
                style="@style/Widget.Material3.Button" />
        </LinearLayout>

        <!-- Waypoint Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addWaypointButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="📍 افزودن مقصد میانی"
            android:textSize="14sp"
            app:cornerRadius="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />
    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="@color/primaryColor" />

    <!-- Floating Action Buttons (Right Side) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="70dp"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/myLocationFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:src="@android:drawable/ic_menu_mylocation"
            app:fabSize="normal"
            app:tint="@android:color/white" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/trafficToggleFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_info"
            app:fabSize="normal"
            app:backgroundTint="#4CAF50"
            app:tint="@android:color/white" />
    </LinearLayout>

    <!-- Bottom Navigation Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/bottomTabLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabTextColor="#666666"
        app:tabSelectedTextColor="#2196F3"
        app:tabIndicatorColor="#2196F3"
        app:tabIndicatorHeight="3dp"
        app:tabTextAppearance="@android:style/TextAppearance.Small" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>
