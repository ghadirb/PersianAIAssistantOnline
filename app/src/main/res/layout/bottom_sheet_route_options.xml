<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_peekHeight="0dp"
    app:behavior_hideable="true">

    <!-- Handle Bar -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="#CCCCCC"
        android:alpha="0.5" />

    <!-- Selected Location Info -->
    <TextView
        android:id="@+id/selectedLocationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="مکان انتخاب شده"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/selectedLocationAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="در حال دریافت آدرس..."
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="16dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/navigateBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="مسیریابی"
            android:textSize="16sp"
            app:icon="@android:drawable/ic_menu_directions"
            app:iconGravity="textStart"
            style="@style/Widget.MaterialComponents.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveLocationBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="ذخیره"
            android:textSize="16sp"
            app:icon="@android:drawable/ic_menu_save"
            app:iconGravity="textStart"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
    </LinearLayout>

    <!-- Route Options (Visible when navigating) -->
    <TextView
        android:id="@+id/routeOptionsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="مسیرهای پیشنهادی"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/routeOptionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="16dp" />

    <!-- Start Navigation Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/startNavigationBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="🚗 بزن بریم!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:cornerRadius="30dp"
        style="@style/Widget.MaterialComponents.Button" />

</LinearLayout>
