<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:navigationIcon="@drawable/ic_backup"
            app:title="دستیار مسیریابی صوتی"
            app:titleTextColor="@android:color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="برای شروع روی میکروفون بزنید"
            android:textSize="16sp"
            android:textColor="#333333"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/transcriptText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/statusText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/micButton"
            style="@style/Widget.Material3.Button.FilledTonalButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="شروع شنیدن"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            app:icon="@drawable/ic_mic"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:layout_constraintTop_toBottomOf="@id/transcriptText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/hintText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="نمونه فرمان‌ها:\n- \"برو خونه\" (با یادگیری عادات)\n- \"ذخیره کن خانه مامان\" (ذخیره مقصد)\n- \"مسیر بدون اتوبان\" یا \"مسیر خلوت\""
            android:textSize="14sp"
            android:textColor="#666666"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/micButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/routeSummaryText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:textColor="#212121"
            android:lineSpacingExtra="2dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/hintText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
