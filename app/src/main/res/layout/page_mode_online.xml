<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🌐"
            android:textSize="64sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="حالت آنلاین"
            android:textColor="#1A237E"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="start"
            android:lineSpacingExtra="6dp"
            android:text="✅ پاسخ‌های دقیق و پیشرفته با GPT-4 و Claude\n\n✅ قابلیت‌های کامل AI مانند خلاصه‌سازی، تحلیل، و...\n\n✅ به‌روزرسانی مداوم\n\n⚠️ نیاز به اینترنت و API Key"
            android:textColor="#424242"
            android:textSize="16sp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#E3F2FD">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="💡 پیشنهاد: این حالت برای استفاده روزمره و دریافت پاسخ‌های با کیفیت مناسب است."
                android:textColor="#1565C0"
                android:textSize="14sp" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
