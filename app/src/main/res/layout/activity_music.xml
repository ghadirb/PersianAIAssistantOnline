<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Music Stats Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/statsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="#F5F5F5"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/musicCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="در حال اسکن..."
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333" />

                    <TextView
                        android:id="@+id/statsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:textColor="#666" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Mood Selection Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎵 انتخاب حالت موسیقی"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/moodChipGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:chipSpacing="8dp" />

                    <TextView
                        android:id="@+id/selectedMoodText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="یک حالت انتخاب کنید"
                        android:textSize="14sp"
                        android:textColor="#666" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/scanMusicButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="🔍 اسکن موسیقی‌های دستگاه"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="28dp"
                    app:backgroundTint="#4CAF50" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/createPlaylistButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="✨ ایجاد پلی‌لیست هوشمند"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="28dp"
                    app:backgroundTint="#2196F3" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/voiceCommandButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="💬 چت با AI"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="28dp"
                    app:backgroundTint="#9C27B0" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/selectPlayerButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="📱 انتخاب Music Player"
                    android:textSize="16sp"
                    app:cornerRadius="28dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="#666"
                    app:strokeWidth="2dp" />

            </LinearLayout>

            <!-- Selected Player Info -->
            <TextView
                android:id="@+id/selectedPlayerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Player پیش‌فرض سیستم"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginBottom="16dp" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminate="true" />

            <!-- Help Text -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#FFF3E0"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="💡 راهنما:\n• ابتدا موسیقی‌های دستگاه را اسکن کنید\n• یک حالت (مثل شاد یا غمگین) انتخاب کنید\n• پلی‌لیست هوشمند بر اساس نام و خواننده آهنگ‌ها ایجاد می‌شود\n• می‌توانید Music Player دلخواه را انتخاب کنید"
                    android:textSize="13sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="#795548" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Music Player Controls -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/playerControlsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="#9C27B0"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Now Playing Text -->
                    <TextView
                        android:id="@+id/nowPlayingText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="▶️ در حال پخش..."
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginBottom="16dp" />

                    <!-- Playback Controls -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- Previous Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/prevButton"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:text="⏮️"
                            android:textSize="24sp"
                            android:visibility="gone"
                            app:cornerRadius="32dp"
                            app:backgroundTint="#7B1FA2"
                            android:layout_marginEnd="12dp" />

                        <!-- Play/Pause Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/playPauseButton"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:text="⏸️"
                            android:textSize="32sp"
                            android:visibility="gone"
                            app:cornerRadius="40dp"
                            app:backgroundTint="#8E24AA"
                            android:layout_marginHorizontal="12dp" />

                        <!-- Next Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/nextButton"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:text="⏭️"
                            android:textSize="24sp"
                            android:visibility="gone"
                            app:cornerRadius="32dp"
                            app:backgroundTint="#7B1FA2"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
