<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@drawable/widget_background_large">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/widgetHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/widgetAppName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="دستیار هوشمند"
            android:textSize="14sp"
            android:textColor="#E0E0E0"
            android:textStyle="bold"
            android:alpha="0.9" />

        <ImageButton
            android:id="@+id/widgetRefreshButtonLarge"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_refresh"
            android:tint="#FFFFFF"
            android:padding="4dp"
            android:alpha="0.7" />

    </LinearLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widgetHeader"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <!-- Time Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextClock
                android:id="@+id/widgetClockLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format12Hour="HH:mm"
                android:format24Hour="HH:mm"
                android:textSize="42sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <TextClock
                android:id="@+id/widgetSecondsLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format12Hour="ss"
                android:format24Hour="ss"
                android:textSize="14sp"
                android:textColor="#B0B0B0"
                android:layout_marginTop="-8dp" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="12dp"
            android:background="#30FFFFFF" />

        <!-- Info Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:paddingTop="4dp">

            <!-- Date -->
            <TextView
                android:id="@+id/widgetPersianDateLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تاریخ فارسی"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!-- Gregorian Date -->
            <TextView
                android:id="@+id/widgetGregorianDateLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تاریخ میلادی"
                android:textSize="12sp"
                android:textColor="#C0C0C0"
                android:layout_marginTop="2dp" />

            <!-- Weather -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/widgetWeatherLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌤️ 25° تهران"
                    android:textSize="14sp"
                    android:textColor="#F0F0F0" />

                <TextView
                    android:id="@+id/widgetWeatherDescLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="آفتابی"
                    android:textSize="12sp"
                    android:textColor="#B0B0B0"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Quick Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/widgetQuickChat"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="💬 چت"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/widget_button_background"
            android:layout_marginEnd="4dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/widgetQuickCalendar"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="📅 تقویم"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/widget_button_background"
            android:layout_marginEnd="4dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/widgetQuickWeather"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="🌡️ آب‌وهوا"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/widget_button_background"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</RelativeLayout>
