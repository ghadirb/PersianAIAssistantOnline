<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- پس‌زمینه -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#99006064"
                android:endColor="#99004D40"
                android:angle="135" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- محتوا -->
    <item android:top="30dp" android:left="30dp" android:right="30dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
        </shape>
    </item>
</layer-list>
